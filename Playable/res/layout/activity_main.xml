<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".MainActivity" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/map"
                android:orientation="horizontal" >

                <ImageView
                android:id="@+id/airplane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:src="@drawable/airplane" />
                
                <ImageView
                    android:id="@+id/town_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-220dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/town_logo" />
        
        <ImageView
            android:id="@+id/town_ino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-280dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/town_ino" />
                
            </LinearLayout>
            
        </HorizontalScrollView>

		<ImageButton
		    android:id="@+id/controller_a_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="261dp"
		    android:layout_marginTop="350dp"
		    android:clickable="true"
		    android:src="@drawable/control_a_1" />

		<ImageButton
		    android:id="@+id/controller_a_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="200dp"
		    android:layout_marginTop="350dp"
		    android:clickable="true"
		    android:src="@drawable/control_a_2" />
            
</RelativeLayout>